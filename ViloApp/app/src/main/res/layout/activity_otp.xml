<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_otp_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/whiteBrightColor"
        tools:text="We have sent an OTP to 9999999999"
        android:layout_margin="@dimen/half_margin" />

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:hint="@string/enter_otp"
        android:padding="@dimen/default_padding"
        android:inputType="number"
        android:layout_marginTop="@dimen/default_margin"
        android:maxLength="4"
        android:imeOptions="actionDone"
        android:background="@drawable/mobile_layout_border"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        card_view:cardBackgroundColor="@color/whiteBrightColor"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/half_padding"
            android:paddingEnd="@dimen/default_padding"
            android:paddingLeft="@dimen/triple_padding"
            android:paddingRight="@dimen/triple_padding"
            android:paddingTop="@dimen/half_padding"
            android:text="LOGIN"
            android:background="@android:color/transparent"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/button_text_size" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend_otp"
        android:autoLink="all"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/default_margin"
        android:padding="@dimen/default_padding"/>
</LinearLayout>